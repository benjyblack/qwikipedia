{
  "manifest_version": 2,

  "name": "Qwikipedia",
  "description": "Hover over blue terms in Wikipedia pages to get a popup with a Wikipedia-provided description of that term.",
  "version": "0.4",

  "icons": { "16": "qwiki16.png",
           "48": "qwiki48.png",
          "128": "qwiki128.png" },
  
  "content_scripts": [
    {
      "matches": [ "http://*.wikipedia.org/*" ],
      "js": [ "jquery.js", "qwiki.js" ],
	  "css": [ "qwiki.css" ],
	  "run_at": "document_start"
    }
  ]
}
