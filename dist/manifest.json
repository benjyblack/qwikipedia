{
  "manifest_version": 2,

  "name": "Qwikipedia",
  "description": "Hover over blue terms in Wikipedia pages to get a popup with a Wikipedia-provided description of that term.",
  "version": "0.5",

  "icons": {
    "16": "res/icon-16.png",
    "48": "res/icon-48.png",
    "128": "res/icon-128.png"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://*.wikipedia.org/*"
      ],
      "js": [
        "qwikipedia.js"
      ],
	  "run_at": "document_start"
    }
  ]
}
